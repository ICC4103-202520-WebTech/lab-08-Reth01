<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>User Management</h1>
    <%= link_to "Back to Recipes", recipes_path, class: "btn btn-secondary" %>
  </div>

  <div class="card">
    <div class="card-body">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Email</th>
            <th>Role</th>
            <th>Recipes Count</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td>
                <span class="badge bg-<%= user.admin? ? 'warning' : 'secondary' %>">
                  <%= user.role %>
                </span>
              </td>
              <td><%= user.recipes.count %></td>
              <td>
                <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-sm btn-outline-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>