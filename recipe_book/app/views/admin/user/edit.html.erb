<div class="container mt-4">
  <h1>Edit User</h1>

  <%= form_with(model: @user, url: admin_user_path(@user), local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control", disabled: true %>
    </div>

    <div class="mb-3">
      <%= form.label :role, class: "form-label" %>
      <%= form.select :role, User.roles.keys.map { |role| [role.titleize, role] }, {}, class: "form-select" %>
    </div>

    <div class="mb-3">
      <%= form.submit "Update User", class: "btn btn-primary" %>
      <%= link_to "Cancel", admin_users_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>