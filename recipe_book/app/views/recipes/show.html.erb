<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><%= @recipe.title %></h1>
  <div>
    <% if can? :update, @recipe %>
      <%= link_to "Edit", edit_recipe_path(@recipe), class: "btn btn-warning" %>
    <% end %>
    <%= link_to "Back to Recipes", recipes_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <div class="row">
      <div class="col-md-4">
        <strong><i class="bi bi-clock"></i> Cook Time:</strong>
        <span class="badge bg-primary"><%= @recipe.cook_time %> minutes</span>
      </div>
      <div class="col-md-4">
        <strong><i class="bi bi-speedometer2"></i> Difficulty:</strong>
        <span class="badge bg-<%= difficulty_color(@recipe.difficulty) %>"><%= @recipe.difficulty %></span>
      </div>
      <div class="col-md-4">
        <strong><i class="bi bi-person"></i> Author:</strong>
        <%= @recipe.user.email %>
      </div>
    </div>
  </div>
  
  <div class="card-body">
    <h4 class="card-title">Instructions</h4>
    <div class="rich-text-content">
      <%= @recipe.instructions %>
    </div>
  </div>
  
  <div class="card-footer">
    <% if can? :destroy, @recipe %>
      <%= button_to "Delete Recipe", @recipe, 
          method: :delete, 
          data: { confirm: "Are you sure you want to delete this recipe?" }, 
          class: "btn btn-danger" %>
    <% end %>
  </div>
</div>