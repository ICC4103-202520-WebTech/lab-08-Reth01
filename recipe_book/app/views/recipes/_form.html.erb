<%= form_with(model: recipe, local: true) do |form| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>
      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :cook_time, "Cook Time (minutes)", class: "form-label" %>
    <%= form.number_field :cook_time, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :difficulty, class: "form-label" %>
    <%= form.select :difficulty, ['Easy', 'Medium', 'Hard'], { include_blank: true }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :instructions, class: "form-label" %>
    <%= form.rich_text_area :instructions, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", recipes_path, class: "btn btn-secondary" %>
  </div>
<% end %>