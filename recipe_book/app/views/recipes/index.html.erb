<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>My Recipe Book</h1>
    <% if can? :create, Recipe %>
      <%= link_to "New Recipe", new_recipe_path, class: "btn btn-success" %>
    <% end %>
  </div>

  <% if @recipes.any? %>
    <div class="row">
      <% @recipes.each do |recipe| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= recipe.title %></h5>
              <p class="card-text">
                <span class="badge bg-secondary">
                  <%= recipe.cook_time %> min
                </span>
                <span class="badge bg-<%= difficulty_color(recipe.difficulty) %> ms-1">
                  <%= recipe.difficulty %>
                </span>
                <br>
                <small class="text-muted">By: <%= recipe.user.email %></small>
              </p>
            </div>
            <div class="card-footer bg-transparent">
              <div class="btn-group w-100">
                <%= link_to "Show", recipe, class: "btn btn-outline-primary btn-sm" %>
                <% if can? :update, recipe %>
                  <%= link_to "Edit", edit_recipe_path(recipe), class: "btn btn-outline-secondary btn-sm" %>
                <% end %>
                <% if can? :destroy, recipe %>
                  <%= button_to "Delete", recipe, 
                      method: :delete, 
                      form: { class: "d-inline" },
                      data: { confirm: "Are you sure you want to delete this recipe?" }, 
                      class: "btn btn-outline-danger btn-sm" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <h3 class="text-muted">No recipes yet</h3>
      <p class="text-muted">Get started by adding your first recipe!</p>
      <% if can? :create, Recipe %>
        <%= link_to "Create Your First Recipe", new_recipe_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  <% end %>
</div>